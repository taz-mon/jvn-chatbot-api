{
  "name": "jvn-chatbot-api",
  "version": "1.0.0",
  "description": "Johann von Neumann inspired chatbot API with token-based interaction system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration",
    "test:unit": "jest tests/unit",
    "test:api": "jest tests/api",
    "reset": "curl -X POST http://localhost:3000/debug/reset"
  },
  "keywords": [
    "api",
    "chatbot",
    "nodejs",
    "express",
    "mongodb",
    "gamification",
    "johann-von-neumann"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "jest": "^30.1.3",
    "mongodb-memory-server": "^10.2.1",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
    
  "jest": {
    "testEnvironment": "node",
    
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "services/**/*.js",
      "utils/**/*.js",
      "!**/node_modules/**"
    ]
  }
}

